<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notifications.NotificationsFragment">

    <TextView
        android:id="@+id/text_notifications"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pfp"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/circle" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="64dp"
        android:layout_toEndOf="@+id/pfp"
        android:text="Junniye"
        android:textColor="@color/black"
        android:textSize="22sp"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="64dp"
        android:layout_toEndOf="@+id/pfp"
        android:text="Animes"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/collections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userName"
        android:layout_marginStart="128dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@+id/pfp"
        android:text="Collections"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btnFollowers"
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_below="@+id/pfp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btnbox"
        android:text="1287 FOLLOWERS"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:layout_width="128dp"
        android:layout_height="30dp"
        android:layout_below="@+id/pfp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:layout_toEndOf="@id/btnFollowers"
        android:background="@drawable/btnbox"
        android:text="456 FOLLOWING"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <TextView
        android:id="@id/collections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFollowers"
        android:layout_marginStart="64dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="64dp"
        android:text="Collections"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnFollowers"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="64dp"
        android:layout_toEndOf="@id/collections"
        android:text="Activity"
        android:textColor="@color/black"
        android:textSize="16sp" />

